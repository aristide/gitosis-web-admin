# Settings that are the same for each environment
global: &global
  gitosis_admin_root: <%= RAILS_ROOT+"/public" %> #/Users/masone/Rails/gitosis-admin # absolute path of your gitosis admin root directory
  gitosis_config: gitosis.conf
  remote_git_repository_root: git@virtus21.citrin.ch

# Environment specific variables.
# Just override global settings as needed.
development:
  <<: *global

staging:
  <<: *global

test:
  <<: *global
  gitosis_admin_root: <%= RAILS_ROOT+"/tmp" %>
  gitosis_config: gitosis.test.conf

production:
  <<: *global
