<h1>Listing public_keys</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Email</th>
  </tr>

<% @public_keys.each do |public_key| %>
  <tr>
    <td><%=h public_key.description %></td>
    <td><%=h public_key.email %></td>
    <td><%= link_to 'Show', public_key %></td>
    <td><%= link_to 'Edit', edit_public_key_path(public_key) %></td>
    <td><%= link_to 'Destroy', public_key, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New public_key', new_public_key_path %>