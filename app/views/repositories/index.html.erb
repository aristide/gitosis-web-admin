<h1>Repositories</h1>

<div class="main_col">
  <% unless @repositories.blank? %>
  <ul>
  <% @repositories.each do |repository| %>
    <li>
      <%= link_to h(repository.name), repository %>
    </li>
  <% end %>
  </ul>
  <% end %>
</div>

<div class="side_col">
  <p>
    <%= link_to '+ Create new repository', new_repository_path, :class => 'button' %>
  </p>
</div>